<section class="sensorData">
    <h2 class="titulo">Datos Realtime</h2>
    <div class="container-table">
        <table class="table table-hover table">
        <thead>
            <tr>
            <th scope="col">Medida</th>
            <th scope="col">Valores</th>
            </tr>
        </thead>
        <tbody>
            <tr class="table-active">
                <th scope="row">Temperatura</th>
                <td>
                    {{#if info}}
                        {{info.temperature}}
                    {{/if}}
                </td>
            </tr>
            <tr class="table-active">
                <th scope="row">rh</th>
                <td>
                    {{#if info}}
                        {{info.rh}}
                    {{/if}}
                </td>
            </tr>
            <tr class="table-active">
                <th scope="row">PM1</th>
                <td>
                    {{#if info}}
                        {{info.pm1}}
                    {{/if}}
                </td>
            </tr>
            <tr class="table-active">
                <th scope="row">PM10</th>
                <td>
                    {{#if info}}
                        {{info.pm10}}
                    {{/if}}
                </td>
            </tr>
            <tr class="table-active">
                <th scope="row">PM25</th>
                <td>
                    {{#if info}}
                        {{info.pm25}}
                    {{/if}}
                </td>
            </tr>   
            <tr class="table-active">
                <th scope="row">Fecha de muestreo</th>
                <td>
                    {{#if info}}
                        {{info.date}}
                    {{/if}}
                </td>
            </tr>
            <tr class="table-active">
                <th scope="row">Hora de muestreo</th>
                <td>
                    {{#if info}}
                        {{info.hour}}
                    {{/if}}
                </td>
            </tr>         
        </tbody>
        </table>
    </div>
</section>
