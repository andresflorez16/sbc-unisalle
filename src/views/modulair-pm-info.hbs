                        {{info.model}}
                    {{/if}}
                </td>
            </tr>
            <tr class="table-active">
                <th scope="row">Descripción</th>
                <td>
                    {{#if info}}
                        {{info.description}}
                    {{/if}}
                </td>
            </tr>
            <tr class="table-active">
                <th scope="row">País</th>
                <td>
                    {{#if info}}
                        {{info.country}}
                    {{/if}}
                </td>
            </tr>
            <tr class="table-active">
                <th scope="row">Ciudad</th>
                <td>
                    {{#if info}}
                        {{info.city}}
                    {{/if}}
                </td>
            </tr>
            <tr class="table-active">
                <th scope="row">Status</th>
                <td>
                    {{#if info}}
                        {{info.status}}
                    {{/if}}
                </td>
            </tr>
            <tr class="table-active">
                <th scope="row">Número serial</th>
